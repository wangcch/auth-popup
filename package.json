{
  "name": "auth-popup",
  "version": "1.0.0",
  "type": "module",
  "description": "A robust, standardized solution for OAuth/SSO popup authorization in web applications",
  "main": "./dist/auth-popup.umd.cjs",
  "module": "./dist/auth-popup.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/auth-popup.js",
      "require": "./dist/auth-popup.umd.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [
    "oauth",
    "sso",
    "popup",
    "authorization",
    "authentication",
    "pkce",
    "login"
  ],
  "author": "wangcch",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wangcch/auth-popup.git"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "prettier": "^3.4.0",
    "typescript": "^5.7.0",
    "vite": "^7.0.0",
    "vite-plugin-dts": "^4.0.0"
  }
}
